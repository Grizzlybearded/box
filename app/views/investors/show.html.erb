<h1><%= @investor.name %></h1>


<table style="width:50%; margin-bottom:30px">
	<tr>
		<th>Name</th>
		<th>Email</th>
		<th>Remove User</th>
	</tr>
	<% @investor.users.each do |f| %>
		<% if f.name.present? %>
			<tr>
				<td style="text-align:left"><%= f.name %></td>
				<td><%= f.email %></td>
				<% if f != current_user %>
					<td><%= link_to 'Remove', f, method: :delete, data: {confirm: "Did this person leave your company?"} %></td>
				<% else %>
					<td></td>
				<% end %>
			</tr>
		<% end %>
	<% end %>		
</table>

<div style="float:right; margin-right:25%">
	<%= link_to "Add User", new_invitation_path, class: "btn btn-large btn-primary" %>
</div>