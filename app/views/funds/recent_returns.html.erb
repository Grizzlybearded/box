<h1>Recent Returns Through <%= @recent_date.strftime("%b-%y") %></h1>

<table style="width:55%">
	<tr>
		<th>Fund</th>
		<th><%= @recent_date.year %></th>
		<th>Last 12 Months</th>
	</tr>
	<% @funds_with_date.each do |f| %>
		<tr>
			<td style="text-align:left"><%= link_to f.name , f %></td>
			<td><%= number_to_percentage(calc_ann_return(get_returns(f, Date.new(@recent_date.year,1,1,), Date.new(@recent_date.year, 12,1))) * 100, precision: 2) %></td>
			<td><%= number_to_percentage(calc_ann_return(get_returns(f, @recent_date.years_ago(1), @recent_date)) * 100, precision: 2) %></td>
		</tr>
	<% end %>	
</table>